{% extends 'common/two-thirds-layout.njk' %}

{% block formContent %}
    <div class="govuk-form-group">
        <label class="govuk-label" for="postcode">UK Postcode</label>
        <span id="description-hint" class="govuk-hint">For example WA4 1AB</span>
        <input class="govuk-input govuk-input--width-10" id="postcode" name="postcode" type="text" value="{{ viewData.postcode }}">
    </div>
{% endblock %}

{% block continueButton %}
  {{ govukButton({
      text: "Find address"
  }) }}
{% endblock %}

{% block contentFooter %}
    <details class="govuk-details">
        <summary class="govuk-details__summary">
            <span class="govuk-details__summary-text">Enter an address outside the UK</span>
        </summary>
        <div class="govuk-details__text">
            <p>Help and guidance...</p>
            <ul class="list list-bullet">
                <li>First thing to try</li>
            </ul>
            <p><a href="#">Enter your address manually</a></p>
        </div>
    </details>
{% endblock %}