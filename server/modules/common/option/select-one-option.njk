{% extends 'common/two-thirds-layout.njk' %}

{% from "radios/macro.njk" import govukRadios %}

{% block formContent %}

  {{ govukRadios({
    idPrefix: fieldName,
    name: fieldName,
    hint: viewData.hint,
    fieldset: {
      legend: {
        text: pageHeading,
        isPageHeading: isQuestionPage,
        classes: "govuk-fieldset__legend--xl"
      }
    },
    errorMessage: errors[fieldName],
    items: viewData.items
  }) }}

{% endblock %}