{% extends 'two-thirds-layout.njk' %}

{% from "textarea/macro.njk" import govukTextarea %}

{% set hintHtml %}
  <p id="descriptionText-hint" class="govuk-body">
    Explain what the item is.
    <br>
    <br>
    Include any features that help identify the item, like the maker's mark, engravings.
  </p>
{% endset %}

{% block formContent %}

  {{ govukTextarea({
    name: "item-description",
    id: "item-description",
    value: viewData['item-description'],
    errorMessage: errors['item-description'],
    label: {
      text: pageHeading,
      isPageHeading: isQuestionPage,
      classes: "govuk-label--xl"
    },
    hint: {
      html: hintHtml
    }
  }) }}

{% endblock %}