    "@hapi/good-console": "^8.1.2",
    "@hapi/good-squeeze": "^5.2.1",
    "@hapi/hapi": "18.4.0",
    "@hapi/inert": "^5.2.2",
    "@hapi/joi": "^15.1.1",
    "@hapi/vision": "^5.5.4",
    "@hapi/wreck": "^16.0.1",
    "@hapi/yar": "^9.2.1",
    "aws-sdk": "^2.560.0",
    "blipp": "^4.0.1",
