{
  "name": "ivory-front-office",
  "version": "0.2.0",
  "description": "Digital service to support the Ivory Act",
  "author": "Department for Environment, Food & Rural Affairs",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/DEFRA/ivory-front-office/issues"
  },
  "homepage": "https://github.com/DEFRA/ivory-front-office#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/ivory-front-office.git"
  },
  "engines": {
    "node": "14.x"
  },
  "main": "index.js",
  "scripts": {
    "start": "node index",
    "build": "bin/build.sh",
    "build:css": "bin/build-css.sh",
    "postinstall": "npm run build",
    "docker:build": "docker build --no-cache -t ivory/front-office .",
    "docker:run": "docker run -p \"3000:3000\" --env-file .env ivory/front-office",
    "lint": "standard",
    "unit-test": "lab --coverage --reporter console --output stdout --reporter lcov --output lcov.info --reporter html --output coverage.html --verbose",
    "test": "npm run lint && npm run unit-test"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/catbox": "^11.1.1",
    "@hapi/catbox-redis": "^6.0.2",
    "@hapi/crumb": "^8.0.1",
    "@hapi/good": "^9.0.1",
    "@hapi/good-console": "^9.0.1",
    "@hapi/good-squeeze": "^6.0.0",
    "@hapi/h2o2": "^9.0.2",
    "@hapi/hapi": "20.1.0",
    "@hapi/hoek": "^9.1.1",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.0.1",
    "@hapi/wreck": "^17.1.0",
    "@hapi/yar": "^10.1.1",
    "array-flat-polyfill": "^1.0.1",
    "aws-sdk": "^2.844.0",
    "blipp": "^4.0.2",
    "deepmerge": "^4.2.2",
    "defra-logging-facade": "git+https://github.com/DEFRA/defra-logging-facade.git#master",
    "dotenv": "^8.2.0",
    "git-last-commit": "^1.0.0",
    "glob": "^7.1.6",
    "govuk-frontend": "^3.11.0",
    "joi": "^17.4.0",
    "js-yaml": "^4.0.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "node-sass": "^5.0.0",
    "notifications-node-client": "^5.1.0",
    "nunjucks": "^3.2.3",
    "sharp": "^0.27.1"
  },
  "devDependencies": {
    "@hapi/code": "^8.0.2",
    "@hapi/lab": "^24.1.0",
    "cheerio": "^1.0.0-rc.5",
    "codeclimate-test-reporter": "0.5.1",
    "htmlparser2": "^6.0.0",
    "sinon": "^9.2.4",
    "standard": "16.0.3"
  }
