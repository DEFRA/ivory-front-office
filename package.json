    "dotenv": "^8.2.0",
    "git-last-commit": "^1.0.0",
    "glob": "^7.1.5",
    "govuk-frontend": "3.3.0",
    "hapi-robots": "^3.2.0",
    "hapi-router": "^5.0.0",
    "ivory-common-modules": "git+https://github.com/DEFRA/ivory-common-modules.git#master",
    "ivory-shared": "git+https://github.com/DEFRA/ivory-shared.git#master",
    "js-yaml": "^3.13.1",
    "lodash.merge": "^4.6.2",
    "moment": "^2.24.0",
    "node-sass": "4.13.0",
    "notifications-node-client": "^4.6.0",
    "nunjucks": "3.2.0",
    "require-all": "^3.0.0",
    "sharp": "^0.23.2"
